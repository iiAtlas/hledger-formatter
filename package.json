{
  "name": "hledger-formatter",
  "displayName": "hledger-formatter",
  "description": "Format hledger journal files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hledger-formatter.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "hledger-formatter.formatDocument",
        "title": "Format hledger Journal"
      }
    ],
    "configuration": {
      "title": "hledger Formatter",
      "properties": {
        "hledger-formatter.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Format hledger journal files on save"
        }
      }
    },
    "keybindings": [
      {
        "command": "hledger-formatter.formatDocument",
        "key": "shift+alt+f",
        "when": "editorTextFocus && (resourceExtname == .journal || resourceExtname == .hledger || resourceExtname == .ledger)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "hledger-formatter.formatDocument",
          "when": "editorTextFocus && (resourceExtname == .journal || resourceExtname == .hledger || resourceExtname == .ledger)",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
