{
  "name": "hledger-formatter-monorepo",
  "private": true,
  "workspaces": [
    "packages/formatter",
    "packages/cli",
    "packages/vscode"
  ],
  "scripts": {
    "build": "npm -w packages/formatter run build && npm -w packages/cli run build && npm -w packages/vscode run build",
    "test": "npm -w packages/formatter run test",
    "lint": "eslint packages/*/src",
    "watch": "npm -w packages/vscode run watch",
    "clean": "rm -rf packages/formatter/out packages/cli/dist packages/vscode/dist"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3"
  }
}
