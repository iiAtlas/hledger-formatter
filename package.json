{
  "name": "hledger-formatter",
  "displayName": "hledger-formatter",
  "description": "Format hledger journal files",
  "version": "0.0.1",
  "repository": "https://github.com/iiAtlas/hledger-formatter.git",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hledger",
        "aliases": [
          "hledger journal",
          "hledger",
          "ledger"
        ],
        "extensions": [
          ".journal",
          ".hledger",
          ".ledger"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hledger",
        "scopeName": "source.hledger",
        "path": "./syntaxes/hledger.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "hledger Color Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/hledger-color-theme.json"
      }
    ],
    "commands": [
      {
        "command": "hledger-formatter.formatDocument",
        "title": "Format hledger Journal"
      },
      {
        "command": "hledger-formatter.toggleComment",
        "title": "Toggle Comment"
      },
      {
        "command": "hledger-formatter.sortEntries",
        "title": "Sort Journal Entries by Date"
      },
      {
        "command": "hledger-formatter.newFile",
        "title": "New hledger Journal File"
      }
    ],
    "configuration": {
      "title": "hledger Formatter",
      "properties": {
        "hledger-formatter.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Format hledger journal files on save"
        },
        "hledger-formatter.sortOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Sort hledger journal entries by date on save"
        },
        "hledger-formatter.amountColumnPosition": {
          "type": "number",
          "default": 42,
          "minimum": 20,
          "maximum": 100,
          "description": "Column position for aligning amounts (default: 42)"
        }
      }
    },
    "keybindings": [
      {
        "command": "hledger-formatter.formatDocument",
        "key": "shift+alt+f",
        "when": "editorTextFocus && (resourceExtname == .journal || resourceExtname == .hledger || resourceExtname == .ledger)"
      },
      {
        "command": "hledger-formatter.toggleComment",
        "key": "cmd+/",
        "when": "editorTextFocus && (resourceExtname == .journal || resourceExtname == .hledger || resourceExtname == .ledger)"
      },
      {
        "command": "hledger-formatter.sortEntries",
        "key": "shift+cmd+s",
        "when": "editorTextFocus && (resourceExtname == .journal || resourceExtname == .hledger || resourceExtname == .ledger)"
      },
      {
        "command": "hledger-formatter.newFile",
        "key": "cmd+n",
        "when": "editorTextFocus && (resourceExtname == .journal || resourceExtname == .hledger || resourceExtname == .ledger)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "hledger-formatter.formatDocument",
          "when": "editorTextFocus && (resourceExtname == .journal || resourceExtname == .hledger || resourceExtname == .ledger)",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint && npm run copy-test-files",
    "lint": "eslint src",
    "test": "vscode-test",
    "copy-test-files": "mkdir -p out/test/test_journals && cp -r src/test/test_journals/* out/test/test_journals/"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "vsce": "^2.15.0"
  }
}
