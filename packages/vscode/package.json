{
  "name": "hledger-formatter",
  "displayName": "HLedger Formatter",
  "publisher": "iiatlas",
  "description": "Make plain text accounting fun! Aligns amounts, sorts entries, and provides syntax highlighting for HLedger journal files.",
  "version": "2.0.0",
  "icon": "images/icon.png",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/iiAtlas/hledger-formatter/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/iiAtlas/hledger-formatter/issues",
    "email": "hledger@atlasatlasatlas.com"
  },
  "galleryBanner": {
    "color": "#231818",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iiAtlas/hledger-formatter.git",
    "directory": "packages/vscode"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hledger",
        "aliases": [
          "HLedger",
          "hledger",
          "ledger"
        ],
        "extensions": [
          ".journal",
          ".hledger",
          ".ledger"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hledger",
        "scopeName": "source.hledger",
        "path": "./syntaxes/hledger.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "hledger-formatter.formatDocument",
        "title": "HLedger: Format Journal"
      },
      {
        "command": "hledger-formatter.toggleComment",
        "title": "HLedger: Toggle Comment"
      },
      {
        "command": "hledger-formatter.sortEntries",
        "title": "HLedger: Sort Journal Entries by Date"
      },
      {
        "command": "hledger-formatter.newFile",
        "title": "HLedger: New Journal File"
      }
    ],
    "configuration": {
      "title": "HLedger Formatter",
      "properties": {
        "hledger-formatter.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Format HLedger journal files on save"
        },
        "hledger-formatter.sortOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Sort HLedger journal entries by date on save"
        },
        "hledger-formatter.amountColumnPosition": {
          "type": "number",
          "default": 42,
          "minimum": 20,
          "maximum": 100,
          "description": "Column position for aligning amounts when using fixed column alignment mode (default: 42)"
        },
        "hledger-formatter.amountAlignment": {
          "type": "string",
          "enum": [
            "fixedColumn",
            "widest"
          ],
          "enumDescriptions": [
            "Align posting amounts using the configured fixed column",
            "Align posting amounts based on the widest account name in each transaction"
          ],
          "default": "widest",
          "description": "Controls how posting amounts are aligned"
        },
        "hledger-formatter.indentationWidth": {
          "type": "number",
          "enum": [
            2,
            4
          ],
          "default": 4,
          "description": "Number of spaces used to indent postings (default: 4)"
        },
        "hledger-formatter.negativeCommodityStyle": {
          "type": "string",
          "enum": [
            "signBeforeSymbol",
            "symbolBeforeSign"
          ],
          "enumDescriptions": [
            "Format negative commodity amounts as -$100 (minus before the symbol)",
            "Format negative commodity amounts as $-100 (minus after the symbol)"
          ],
          "default": "symbolBeforeSign",
          "description": "Choose how negative commodity amounts are rendered"
        },
        "hledger-formatter.dateFormat": {
          "type": "string",
          "enum": [
            "YYYY-MM-DD",
            "YYYY/MM/DD",
            "YYYY.MM.DD"
          ],
          "enumDescriptions": [
            "Format transaction dates with dashes (e.g. 2025-03-01)",
            "Format transaction dates with slashes (e.g. 2025/03/01)",
            "Format transaction dates with dots (e.g. 2025.03.01)"
          ],
          "default": "YYYY-MM-DD",
          "description": "Preferred transaction date format"
        },
        "hledger-formatter.defaultAccountCategories": {
          "type": "string",
          "enum": [
            "none",
            "lowercase",
            "uppercase",
            "capitalize"
          ],
          "enumDescriptions": [
            "Don't include standard account categories in autocomplete",
            "Include as lowercase: assets, liabilities, equity, revenues, income, expenses",
            "Include as uppercase: ASSETS, LIABILITIES, EQUITY, REVENUES, INCOME, EXPENSES",
            "Include as capitalized: Assets, Liabilities, Equity, Revenues, Income, Expenses"
          ],
          "default": "lowercase",
          "description": "Whether to include standard HLedger account categories in autocomplete and their casing style"
        },
        "hledger-formatter.suggestBalancingAmounts": {
          "type": "boolean",
          "default": true,
          "description": "Suggest balancing amounts as inline ghost text that can be accepted with Tab"
        },
        "hledger-formatter.commentCharacter": {
          "type": "string",
          "enum": [
            ";",
            "#",
            "*"
          ],
          "enumDescriptions": [
            "Use semicolon for comments (most common in hledger)",
            "Use hash/pound for comments",
            "Use asterisk for comments (useful for Emacs org-mode users)"
          ],
          "default": ";",
          "description": "Preferred comment character to use when toggling comments"
        }
      }
    },
    "keybindings": [
      {
        "command": "hledger-formatter.formatDocument",
        "key": "shift+alt+f",
        "when": "editorTextFocus && (resourceExtname == .journal || resourceExtname == .hledger || resourceExtname == .ledger)"
      },
      {
        "command": "hledger-formatter.toggleComment",
        "key": "cmd+/",
        "when": "editorTextFocus && (resourceExtname == .journal || resourceExtname == .hledger || resourceExtname == .ledger)"
      },
      {
        "command": "hledger-formatter.sortEntries",
        "key": "shift+cmd+s",
        "when": "editorTextFocus && (resourceExtname == .journal || resourceExtname == .hledger || resourceExtname == .ledger)"
      },
      {
        "command": "hledger-formatter.newFile",
        "key": "cmd+n",
        "when": "editorTextFocus && (resourceExtname == .journal || resourceExtname == .hledger || resourceExtname == .ledger)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "hledger-formatter.formatDocument",
          "when": "editorTextFocus && (resourceExtname == .journal || resourceExtname == .hledger || resourceExtname == .ledger)",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "prebuild": "npm --prefix ../formatter run build",
    "prewatch": "npm run prebuild",
    "build": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "vscode:prepublish": "npm run prebuild && node esbuild.mjs --production",
    "vsce:package": "npx vsce package --no-dependencies",
    "vsce:publish": "npx vsce publish --no-dependencies",
    "ovsx:publish": "npx ovsx publish -p OVSX_TOKEN_GOES_HERE_BUT_DONT_COMMIT_IT"
  },
  "devDependencies": {
    "@hledger-fmt/formatter": "*",
    "@types/vscode": "1.92.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.25.0"
  }
}
