{
  "name": "@iiatlas/hledger-fmt",
  "version": "2.0.0",
  "description": "Format and sort hledger journal files",
  "keywords": [
    "hledger",
    "formatter",
    "accounting",
    "ledger",
    "plain-text-accounting",
    "journal"
  ],
  "homepage": "https://github.com/iiAtlas/hledger-formatter/tree/main/packages/cli#readme",
  "bugs": {
    "url": "https://github.com/iiAtlas/hledger-formatter/issues"
  },
  "author": "Atlas Wegman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iiAtlas/hledger-formatter.git",
    "directory": "packages/cli"
  },
  "bin": {
    "hledger-fmt": "./bin/hledger-fmt.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "npm --prefix ../formatter run build",
    "build": "node esbuild.mjs",
    "test": "npm run build && vitest run",
    "prepack": "npm run build",
    "npm:pack": "npm pack --dry-run",
    "npm:publish": "npm publish --access public"
  },
  "dependencies": {
    "commander": "^14.0.3"
  },
  "devDependencies": {
    "@hledger-fmt/formatter": "*",
    "esbuild": "^0.25.0",
    "vitest": "^4.0.18"
  }
}
