{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "hledger",
  "patterns": [
    {
      "include": "#include"
    },
    {
      "include": "#comment"
    },
    {
      "include": "#project"
    },
    {
      "include": "#transaction"
    },
    {
      "include": "#posting"
    }
  ],
  "repository": {
    "include": {
      "patterns": [
        {
          "name": "keyword.control.include.hledger",
          "match": "^!include\\s+(.+)$",
          "captures": {
            "0": {
              "name": "meta.include.hledger"
            },
            "1": {
              "name": "string.quoted.other.include-path.hledger"
            }
          }
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.block.hledger",
          "begin": "^\\s*comment\\s*$",
          "end": "^\\s*end comment\\s*$",
          "beginCaptures": {
            "0": {
              "name": "keyword.control.comment-block.hledger"
            }
          },
          "endCaptures": {
            "0": {
              "name": "keyword.control.comment-block.hledger"
            }
          }
        },
        {
          "name": "comment.line.semicolon.hledger",
          "match": "^\\s*;.*$"
        },
        {
          "name": "comment.line.hash.hledger",
          "match": "^\\s*#.*$"
        },
        {
          "name": "comment.line.asterisk.hledger",
          "match": "^\\s*\\*.*$"
        }
      ]
    },
    "project": {
      "patterns": [
        {
          "name": "meta.project.hledger",
          "match": "^\\s*(project)\\s*:\\s*(.+)$",
          "captures": {
            "1": {
              "name": "keyword.other.project.hledger"
            },
            "2": {
              "name": "entity.name.type.project.hledger"
            }
          }
        }
      ]
    },
    "transaction": {
      "patterns": [
        {
          "name": "meta.transaction.reconciled.hledger",
          "match": "^(\\d{4}([-\\/.])\\d{1,2}\\2\\d{1,2})\\s+(\\*)(?:\\s+(.*))?$",
          "captures": {
            "1": {
              "name": "constant.numeric.date.hledger"
            },
            "3": {
              "name": "keyword.operator.status.reconciled.hledger"
            },
            "4": {
              "name": "string.unquoted.description.reconciled.hledger",
              "patterns": [
                {
                  "include": "#inline-project"
                }
              ]
            }
          }
        },
        {
          "name": "meta.transaction.pending.hledger",
          "match": "^(\\d{4}([-\\/.])\\d{1,2}\\2\\d{1,2})\\s+(!)(?:\\s+(.*))?$",
          "captures": {
            "1": {
              "name": "constant.numeric.date.hledger"
            },
            "3": {
              "name": "keyword.operator.status.pending.hledger"
            },
            "4": {
              "name": "string.unquoted.description.pending.hledger",
              "patterns": [
                {
                  "include": "#inline-project"
                }
              ]
            }
          }
        },
        {
          "name": "meta.transaction.unreconciled.hledger",
          "match": "^(\\d{4}([-\\/.])\\d{1,2}\\2\\d{1,2})(?:\\s+([^*!].*))?$",
          "captures": {
            "1": {
              "name": "constant.numeric.date.hledger"
            },
            "3": {
              "name": "string.unquoted.description.unreconciled.hledger",
              "patterns": [
                {
                  "include": "#inline-project"
                }
              ]
            }
          }
        }
      ]
    },
    "posting": {
      "patterns": [
        {
          "name": "comment.line.indented.hledger",
          "match": "^\\s+[;#*].*$"
        },
        {
          "name": "meta.posting.hledger",
          "match": "^\\s+(([^;#*]+?)(?:\\s{2,}([\\S\\s]+?))?(?:\\s+([;#*].*))?)$",
          "captures": {
            "2": {
              "name": "meta.account.hledger",
              "patterns": [
                { "include": "#account" }
              ]
            },
            "3": {
              "name": "meta.amount.hledger",
              "patterns": [
                { "include": "#amount" }
              ]
            },
            "4": {
              "name": "comment.line.inline.hledger"
            }
          }
        }
      ]
    },
    "account": {
      "name": "meta.account.hledger",
      "patterns": [
        {
          "match": "(?:(?!.* {2})([^\\s:;#*\"{}=]+(?: [^\\s:;#*\"{}=]+)*)\\:)?(?:(?!.* {2})([^\\s:;#*\"{}=]+(?: [^\\s:;#*\"{}=]+)*)\\:)?(?:(?!.* {2})([^\\s:;#*\"{}=]+(?: [^\\s:;#*\"{}=]+)*)\\:)?(?:(?!.* {2})([^\\s:;#*\"{}=]+(?: [^\\s:;#*\"{}=]+)*)\\:)?(?:(?!.* {2})([^\\s:;#*\"{}=]+(?: [^\\s:;#*\"{}=]+)*))?",
          "captures": {
            "1": { "name": "entity.name.tag.account.level1.hledger" },
            "2": { "name": "entity.name.function.account.level2.hledger" },
            "3": { "name": "variable.parameter.account.level3.hledger" },
            "4": { "name": "storage.type.account.level4.hledger" },
            "5": { "name": "keyword.control.account.level5.hledger" }
          }
        }
      ]
    },
    "amount": {
      "patterns": [
        {
          "name": "constant.numeric.amount.hledger",
          "match": "(?:([+-]?)\\s*)?(\"[^;\n\"]+\"|[^0-9+\\-@*;\\t\\n \"{}=]+)(?:\\s*([+-]?))?\\s*((?:\\d{1,2}(?:,\\d{2})+(?:,\\d{3})*|\\d{1,3}(?:,\\d{3})+|\\d+)(?:[.,]\\d*)?(?:[eE][+-]?\\d+)?)(?:\\s*(@{1,2})\\s*(?:([+-]?)\\s*)?(\"[^;\n\"]+\"|[^0-9+\\-@*;\\t\\n \"{}=]+)(?:\\s*([+-]?))?\\s*((?:\\d{1,2}(?:,\\d{2})+(?:,\\d{3})*|\\d{1,3}(?:,\\d{3})+|\\d+)(?:[.,]\\d*)?(?:[eE][+-]?\\d+)?))?",
          "captures": {
            "1": { "name": "keyword.operator.sign.hledger" },
            "2": { "name": "constant.numeric.commodity.hledger" },
            "3": { "name": "keyword.operator.sign.hledger" },
            "4": { "name": "constant.numeric.amount.hledger" },
            "5": { "name": "keyword.operator.cost.hledger" },
            "6": { "name": "keyword.operator.sign.hledger" },
            "7": { "name": "constant.numeric.commodity.cost.hledger" },
            "8": { "name": "keyword.operator.sign.hledger" },
            "9": { "name": "constant.numeric.amount.cost.hledger" }
          }
        },
        {
          "name": "constant.numeric.amount.hledger",
          "match": "(?:([+-]?)\\s+)?((?:\\d{1,2}(?:,\\d{2})+(?:,\\d{3})*|\\d{1,3}(?:,\\d{3})+|\\d+)(?:[.,]\\d*)?(?:[eE][+-]?\\d+)?)\\s*(\"[^;\n\"]+\"|[^0-9+\\-@*;\\t\\n \"{}=]+)?(?:\\s*(@{1,2})\\s*(?:([+-]?)\\s+)?((?:\\d{1,2}(?:,\\d{2})+(?:,\\d{3})*|\\d{1,3}(?:,\\d{3})+|\\d+)(?:[.,]\\d*)?(?:[eE][+-]?\\d+)?)\\s*(\"[^;\n\"]+\"|[^0-9+\\-@*;\\t\\n \"{}=]+))?",
          "captures": {
            "1": { "name": "keyword.operator.sign.hledger" },
            "2": { "name": "constant.numeric.amount.hledger" },
            "3": { "name": "constant.numeric.commodity.hledger" },
            "4": { "name": "keyword.operator.cost.hledger" },
            "5": { "name": "keyword.operator.sign.hledger" },
            "6": { "name": "constant.numeric.amount.cost.hledger" },
            "7": { "name": "constant.numeric.commodity.cost.hledger" }
          }
        }
      ]
    },
    "inline-project": {
      "patterns": [
        {
          "name": "meta.inline-project.hledger",
          "match": "\\b(project)\\s*:\\s*([\\w-]+)",
          "captures": {
            "1": {
              "name": "keyword.other.project.hledger"
            },
            "2": {
              "name": "entity.name.type.project.hledger"
            }
          }
        }
      ]
    }
  },
  "scopeName": "source.hledger"
}