{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-formatter",
			"type": "npm",
			"script": "build",
			"path": "packages/formatter",
			"problemMatcher": "$tsc",
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "build-vscode",
			"type": "shell",
			"command": "npm -w packages/vscode run build",
			"dependsOn": "build-formatter",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "watch-vscode",
			"type": "shell",
			"command": "npm -w packages/vscode run watch",
			"dependsOn": "build-formatter",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^\\[watch\\]",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "Watching for changes..."
				}
			},
			"presentation": {
				"reveal": "never"
			}
		}
	]
}
